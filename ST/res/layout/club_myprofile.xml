<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/heder_bck" >

        <!-- <Button -->
        <!-- android:id="@+id/club_signup2_back" -->
        <!-- style="?android:attr/buttonStyleSmall" -->
        <!-- android:layout_width="60dp" -->
        <!-- android:layout_height="40dp" -->
        <!-- android:layout_alignParentLeft="true" -->
        <!-- android:background="@drawable/cbtn_back" -->
        <!-- android:layout_centerVertical="true" -->
        <!-- /> -->

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/myprofile_header_txt" />

        <Button
            android:id="@+id/club_Profile_edit"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/myprofile_btn_edit" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:layout_weight=".5" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/club_profile_imageview"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="1dp"
                        android:background="@drawable/img_cont"
                        android:padding="2dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/frame" />

                    <RatingBar
                        android:id="@+id/ratingbar"
                        style="@style/foodRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                         android:numStars="5"
                         android:rating="0"
                        
                         />

                    <com.tny.utils.MyTextView
                        android:id="@+id/club_profile_rateingtextview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:drawableLeft="@drawable/sep"
                        android:drawableRight="@drawable/sep"
                        android:text="0/5"
                        android:textColor="@color/yello"
                        android:textSize="10dp" />

                    <com.tny.utils.MyTextView
                        android:id="@+id/club_profile_viewreview"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="15dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/myprofile_txt_reviews" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical" >

                    <com.tny.utils.MyTextView
                        android:id="@+id/club_profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="@color/white" />

                    <com.tny.utils.MyTextView
                        android:id="@+id/club_profile_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey" />

                    <com.tny.utils.MyTextView
                        android:id="@+id/club_profile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/grey" />

                    <com.tny.utils.MyTextView
                        android:id="@+id/club_profile_viewallinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text="View all info"
                        android:textColor="@color/yello" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:weightSum="2" >

                        <Button
                            android:id="@+id/club_profile_add_offers"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/add_offer" />

                        <Button
                            android:id="@+id/club_profile_view_offers"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@drawable/view_offer" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/club_profile_view_more_photos"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/view_photo" />
                </LinearLayout>
            </LinearLayout>

            <View
     android:id="@+id/view1"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
     android:background="@drawable/shadow" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight=".4"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/your_stripper" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/club_profile_addressprevious"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/arrow_left" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/club_stripper_profile_imageview"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_margin="1dp"
                                android:background="@drawable/img_cont"
                                android:padding="2dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/frame" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:orientation="vertical" >

                            <com.tny.utils.MyTextView
                                android:id="@+id/club_stripper_profile_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textColor="@color/red" />

                            <com.tny.utils.MyTextView
                                android:id="@+id/club_stripper_profile_age"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/grey" />

                            <com.tny.utils.MyTextView
                                android:id="@+id/club_stripper_profile_hair_color"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:singleLine="true"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/grey" />

                            <com.tny.utils.MyTextView
                                android:id="@+id/club_stripper_profile_status"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/grey" />

                            <RatingBar
                        android:id="@+id/ratingbar_1"
                        style="@style/foodRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                         android:numStars="5"
                         android:rating="0"
                        
                         />

                            <com.tny.utils.MyTextView
                                android:id="@+id/club_stripper_profile_rateingtextview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="3dp"
                                android:drawableLeft="@drawable/sep"
                                android:drawableRight="@drawable/sep"
                                android:text="0/5"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/yello" />

                            <com.tny.utils.MyTextView
                                android:id="@+id/club_stripper_profile_viewreview"
                                android:layout_width="wrap_content"
                                android:layout_height="10dp"
                                android:layout_marginTop="3dp"
                                android:background="@drawable/myprofile_txt_reviews" />
                        </LinearLayout>
                    </LinearLayout>

                    <Button
                        android:id="@+id/club_profile_addressnext"
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/arrow_right" />
                </LinearLayout>

                <Button
                    android:id="@+id/club_stripper_profile_viewall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/view_all" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>