<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/heder_bck" >

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/signup_2_txt" />

        <Button
            android:id="@+id/stripper_signup_header_next1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cbtn_next" />

        <Button
            android:id="@+id/stripper_signup2_back"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cbtn_back" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/parentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/stripper_signup2_country"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/spnner1"
                android:gravity="center_vertical|left"
                android:hint="Country"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <Button
                android:id="@+id/stripper_signup2_state"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spnner1"
                android:gravity="center_vertical|left"
                android:hint="State"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/stripper_signup2_zipcode"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_2_edittext_back"
                android:ellipsize="end"
                android:ems="10"
                android:hint="  Zip Code"
                android:inputType="number"
                android:lines="1"
                android:maxLength="8"
                android:paddingLeft="7dp"
                android:singleLine="true"
                android:textColor="@color/white" >
            </EditText>

            <Button
                android:id="@+id/stripper_signup2_workingat"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spnner1"
                android:gravity="center_vertical|left"
                android:hint="Club Name"
                android:paddingLeft="5dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <com.tny.utils.MyTextView
                android:id="@+id/stripper_signup2_addmore"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/transparent"
                android:text="Add more"
                android:textColor="@color/red" />

            <EditText
                android:id="@+id/stripper_signup2_wagerate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_2_edittext_back"
                android:ellipsize="end"
                android:ems="10"
                android:hint="  Wage rate"
                android:inputType="number"
                android:lines="1"
                android:paddingLeft="7dp"
                android:singleLine="true"
                android:textColor="@color/white" />

            <EditText
                android:id="@+id/stripper_signup2_referanceid"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/signup_2_edittext_back"
                android:ellipsize="end"
                android:ems="10"
                android:hint="  referral id/promo code"
                android:lines="1"
                android:paddingLeft="7dp"
                android:singleLine="true"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>