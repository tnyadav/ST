<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/b"
    android:orientation="vertical"
     >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/heder_bck" >

        <TextView
            android:id="@+id/ImageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Details"
            android:textSize="24dip"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/view_back_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dip"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cbtn_back" />
         <Button
            android:id="@+id/view_home_button"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="60dip"
            android:layout_height="43dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Home"
            android:textSize="18dip"
            android:textColor="#fff"
            android:textStyle="bold"
            android:background="@drawable/header_button_done" />
    </RelativeLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dip"
    android:background="@drawable/field"
    android:orientation="vertical"
    android:padding="10dp" >
    
    <com.tny.utils.MyTextView
        android:id="@+id/View_created_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:text="23-5-2012"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/red" />

    <com.tny.utils.MyTextView
        android:id="@+id/View_title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:maxLines="4"
        android:text="Title of View"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <com.tny.utils.MyTextView
        android:id="@+id/View_status_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        android:maxLines="2"
        android:text="From: 23-2-2012"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />
</LinearLayout>
</LinearLayout>