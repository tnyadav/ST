<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dip"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/view_review_row_image"
        android:layout_width="0dp"
        android:layout_height="66dp"
        android:padding="2dp"
        android:layout_weight=".2"
        android:scaleType="fitXY"
        android:background="@drawable/list_img"
        android:src="@drawable/frame" />

    <LinearLayout
        android:id="@+id/view_review_row"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
         android:layout_weight=".7"
        android:layout_marginLeft="2dip"
        android:orientation="vertical" >

        <com.tny.utils.MyTextView
            android:id="@+id/view_review_row_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title Name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/red" />

        <com.tny.utils.MyTextView
            android:id="@+id/view_review_row_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Text"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
         android:layout_weight=".1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/arrow" />

</LinearLayout>