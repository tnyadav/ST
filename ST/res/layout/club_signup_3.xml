<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/b"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/heder_bck" >

        <ImageView
            android:id="@+id/ImageView1"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/signup_3_text" />

        <Button
            android:id="@+id/club_signup_3_done"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_done" />

        <Button
            android:id="@+id/club_signup_3_back"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/cbtn_back" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/LinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add more info about service"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/red" />

              <EditText
                  android:id="@+id/club_signup_3_square_footage"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_marginTop="10dp"
                  android:background="@drawable/edittext_back"
                  android:ems="10"
                  android:hint="  Add your square Footage"
                  android:inputType="number"
                  android:paddingLeft="5dp"
                  android:textColor="@color/white"
                  android:textSize="20dp" >
       
    </EditText>

    <EditText
        android:id="@+id/club_signup_3_minimum_age"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/spnner1"
        android:hint="  Minimum age"
        android:inputType="number"
        android:maxLength="2"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Topless"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <RadioGroup
            android:id="@+id/club_signup_3_radio_topless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/topless_radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:textColor="@color/yello" />

            <RadioButton
                android:id="@+id/topless_radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textColor="@color/yello" />
           
        </RadioGroup>

    </LinearLayout>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Full Nude"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <RadioGroup
            android:id="@+id/club_signup_3_radio_full_nude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/full_nude_radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                
                android:text="Yes"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:textColor="@color/yello" />

            <RadioButton
                android:id="@+id/full_nude_radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
              
                android:layout_weight="1"
                android:checked="true"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textColor="@color/yello" />
           
        </RadioGroup>

    </LinearLayout>
  <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Juce Bar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <RadioGroup
            android:id="@+id/club_signup_3_radio_juice_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/juice_bar_radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:textColor="@color/yello" />

            <RadioButton
                android:id="@+id/juice_bar_radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textColor="@color/yello" />
           
        </RadioGroup>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Beer Bar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <RadioGroup
            android:id="@+id/club_signup_3_radio_beer_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/beer_bar_radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:textColor="@color/yello" />

            <RadioButton
                android:id="@+id/beer_bar_radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textColor="@color/yello" />
           
        </RadioGroup>

    </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Full Bar"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <RadioGroup
            android:id="@+id/club_signup_3_radio_full_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/full_bar_radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:textColor="@color/yello" />

            <RadioButton
                android:id="@+id/full_bar_radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
               
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textColor="@color/yello" />
           
        </RadioGroup>

    </LinearLayout>
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:weightSum="2" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="Food Kitchen"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/grey" />

        <RadioGroup
            android:id="@+id/club_signup_3_radio_full_kitchen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:weightSum="2"
            android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/food_kitchen_radio0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:textColor="@color/yello" />

            <RadioButton
                android:id="@+id/food_kitchen_radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
              
                android:layout_weight="1"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textColor="@color/yello" />
           
        </RadioGroup>

    </LinearLayout>

    <EditText
        android:id="@+id/club_signup_3_dancer_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_back"
        android:ems="10"
        android:hint="  How many dancer have you?"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:textSize="20dp" >

    </EditText>

    <EditText
        android:id="@+id/club_signup_3_year_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_back"
        android:ems="10"
        android:hint="  How long in business?(years)"
        android:inputType="number"
        android:maxLength="3"
        android:paddingLeft="5dp"
        android:textColor="@color/white"
        android:textSize="20dp" >

    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Cover charges day night special event cast:"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/grey" />

<RadioGroup
    android:id="@+id/club_signup_3_radio_event_cast"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="10dp"
    android:orientation="horizontal" >

            <RadioButton
                android:id="@+id/event_cast_radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="Yes"
               
                android:button="@drawable/radio_selector"
                android:textColor="@color/yello" />

            <RadioButton
                android:id="@+id/event_cast_radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="30dp"
                android:button="@drawable/radio_selector"
                android:text="No"
                android:textColor="@color/yello" />
           
        </RadioGroup>
            
        </LinearLayout>
    </ScrollView>

  
</LinearLayout>